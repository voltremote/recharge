<% content_for :maps_javascript do %>
  <% for station in @stations %>

    google.maps.event.addListener(new google.maps.Marker({
      position: new google.maps.LatLng(<%= station.lat %> , <%= station.lng %>),
      map: map,
      url: '<%= station_url(station) %>',
      title:"<%= station.name %>"
    }), 'click', function() { window.location.href = this.url; });

  <% end %>
<% end %>

<%= content_for :page_header do %>
  <span style="color:white"><%  "Stations" %></span>
<% end %>

<table>
  <tr>
    <th>Name</th>
    <th>Description</th>
    <th>Zipcode</th>
    <th>Street</th>
    <th>City</th>
  </tr>
  <% for station in @stations %>
    <tr>
      <td><%= station.name %></td>
      <td><%= station.description %></td>
      <td><%= station.zipcode %></td>
      <td><%= station.street %></td>
      <td><%= station.city %></td>
      <td><%= link_to "Show", station %></td>
    </tr>
  <% end %>
</table>

